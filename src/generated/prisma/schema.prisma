generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Contact {
  id             Int       @id @default(autoincrement())
  phoneNumber    String?
  email          String?
  linkedId       Int?
  linkPrecedence String    @default("primary")
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  deletedAt      DateTime?

  primaryContact    Contact?  @relation("PrimarySecondaryLink", fields: [linkedId], references: [id])
  secondaryContacts Contact[] @relation("PrimarySecondaryLink")

  @@index([email])
  @@index([phoneNumber])
  @@index([linkedId])
}
